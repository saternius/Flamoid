{
  "manifest_version": 3,
  "name": "Flamnoid",
  "version": "1.0",
  "permissions": ["contextMenus", "activeTab", "tabs", "contextMenus", "storage", "sidePanel", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}